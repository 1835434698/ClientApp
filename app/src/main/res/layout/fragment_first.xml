<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:background="@android:color/holo_green_dark"
            android:layout_width="match_parent"
            android:paddingTop="@dimen/dp_40"
            android:layout_height="@dimen/dp_140">

            <ImageView
                android:id="@+id/iv_back"
                android:src="@mipmap/back_translation"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_30" />

            <ImageView
                android:id="@+id/iv_right"
                android:src="@mipmap/hot_press"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_30" />
            <RelativeLayout
                android:layout_toRightOf="@id/iv_back"
                android:layout_toLeftOf="@id/iv_right"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:background="@drawable/rectangle_bg_two"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40">

                <ImageView
                    android:id="@+id/iv_serach"
                    android:src="@mipmap/back_translation"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_width="@dimen/dp_25"
                    android:layout_centerVertical="true"
                    android:layout_height="@dimen/dp_25" />

                <TextView
                    android:id="@+id/tv_right"
                    android:textSize="@dimen/sp_13"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dp_5"
                    android:textColor="@color/color_454241"
                    android:background="@drawable/rectangle_bg_three"
                    android:text="搜索美食"/>
                <EditText
                    android:layout_toRightOf="@id/iv_serach"
                    android:layout_toLeftOf="@id/tv_right"
                    android:background="@null"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/color_454241"
                    android:hint="餐饮、关键字"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="-20dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_80">
            <ImageView
                android:layout_marginLeft="@dimen/dp_20"
                android:src="@mipmap/ic_launcher"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50" />
            <View
                android:id="@+id/v_center"
                android:layout_marginBottom="@dimen/dp_5"
                android:background="@color/color_D1D1D3"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_width="@dimen/dp_2"
                android:layout_height="@dimen/sp_25"/>

            <LinearLayout
                android:layout_toLeftOf="@id/v_center"
                android:orientation="vertical"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_width="@dimen/dp_90"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/color_1395D7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/sp_25"
                    android:text="餐饮"/>
                <View
                    android:layout_marginTop="@dimen/dp_3"
                    android:background="@color/color_1395D7"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_2"/>
            </LinearLayout>
            <LinearLayout
                android:layout_toRightOf="@id/v_center"
                android:orientation="vertical"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_width="@dimen/dp_90"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@android:color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/sp_25"
                    android:text="酒店"/>
                <View
                    android:layout_marginTop="@dimen/dp_3"
                    android:visibility="gone"
                    android:background="@color/color_1395D7"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_2"/>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/first_text_one"
                    android:text="全部"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/first_text_one"
                    android:text="区域位置"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/first_text_one"
                    android:text="菜系类别"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/first_text_one"
                    android:text="智能分类"/>

            </LinearLayout>

        </LinearLayout>

        <View style="@style/order_line_2"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_3"
            android:layout_marginBottom="@dimen/dp_5"/>




    </LinearLayout>

</ScrollView>